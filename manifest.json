{
    "manifest_version": 3,
    "name": "Hover Video Control",
    "version": "1.0",
    "description": "Control play/pause of videos using mouse hover.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  